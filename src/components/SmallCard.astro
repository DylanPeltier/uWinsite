---
import { Icon } from "astro-icon";

export interface Props {
    titleOne: string;
    icon: string;
    titleTwo: string;
}

const { titleOne, icon, titleTwo } = Astro.props as Props;
---

<div class="card">
    <Icon name={icon} />
    <div class="text">
        <h1>{titleOne}<br />{titleTwo}</h1>
    </div>
</div>

<style>
    @import url("https://fonts.googleapis.com/css2?family=Anek+Telugu:wght@100;200;300;400;500;600;700;800&display=swap");

    .card {
        width: 373px;
        height: 175px;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-evenly;
        background: rgb(41, 101, 128);
        background: -moz-linear-gradient(
            217deg,
            rgba(41, 101, 128, 1) 0%,
            rgba(77, 138, 166, 1) 100%
        );
        background: -webkit-linear-gradient(
            217deg,
            rgba(41, 101, 128, 1) 0%,
            rgba(77, 138, 166, 1) 100%
        );
        background: linear-gradient(
            217deg,
            rgba(41, 101, 128, 1) 0%,
            rgba(77, 138, 166, 1) 100%
        );
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr="#296580",endColorstr="#4d8aa6",GradientType=1);
        border-radius: 20px;
        margin: 10px;
    }

    .card h1 {
        font-family: "Anek Telugu", sans-serif;
        font-weight: 700;
        color: #fff;
        width: fit-content;
        height: fit-content;
        line-height: 30px;
        margin-top: 35px;
    }

    .text {
        display: flex;
        justify-content: center;
        flex-direction: column;
        align-items: center;
        text-align: left;
        padding: 10px;
    }

    [astro-icon] {
        color: #fff;
        width: 100px;
        height: 100px;
        padding: 10px;
    }
</style>
